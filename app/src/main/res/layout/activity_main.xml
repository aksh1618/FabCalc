<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00757575"
        tools:context="com.aksh.fabcalc.MainActivity">

        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <android.support.v7.widget.CardView
                android:id="@+id/calc_display_card_view"
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <include layout="@layout/calc_display"
                    android:id="@+id/display"/>

            </android.support.v7.widget.CardView>
        </io.codetail.widget.RevealFrameLayout>

        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <android.support.v7.widget.CardView
                android:id="@+id/calc_operations_card_view"
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <include layout="@layout/basic_calc_keys"
                    android:id="@+id/keys"/>

            </android.support.v7.widget.CardView>
        </io.codetail.widget.RevealFrameLayout>


        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <android.support.v7.widget.CardView
                android:id="@+id/calc_bottombar_card_view"
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <include layout="@layout/calc_options"
                    android:id="@+id/options"/>

            </android.support.v7.widget.CardView>
        </io.codetail.widget.RevealFrameLayout>
    </LinearLayout>
</layout>

