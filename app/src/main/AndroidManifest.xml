<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aksh.fabcalc"
    android:versionCode="1"
    android:versionName="1.0">

    <application
        android:name=".FabCalc"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">

            <!-- TODO: Remove orientation after making custom landscape layout -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <!--TODO: Label required?-->
        <activity android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <provider
            android:name=".history.generated.HistoryProvider"
            android:authorities="com.aksh.fabcalc.history.HistoryProvider"
            android:exported="false" />
    </application>

</manifest>